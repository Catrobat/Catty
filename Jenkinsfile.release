#!/usr/bin/env groovy

pipeline {
  agent {
    label 'MAC'
  }

  options {
    timeout(time: 2, unit: 'HOURS')
    timestamps()
    buildDiscarder(logRotator(numToKeepStr: '30', artifactNumToKeepStr: '30'))
  }

  stages {
    stage('Carthage') {
      steps {
        sh 'make init'
      }
    }
    stage('Release') {
      steps {
        sh 'cd src && bundle exec fastlane release'
      }
    }
  }

  post {
    always {
      // clean workspace
      deleteDir()
    }
  }
}
